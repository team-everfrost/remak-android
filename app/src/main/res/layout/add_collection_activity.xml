<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 컬렉션 만들기"
        android:textFontWeight="500"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton" />

    <TextView
        android:id="@+id/collectionNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="67dp"
        android:text="컬렉션 이름"
        android:textFontWeight="500"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" *"
        android:textColor="@color/red"
        android:textFontWeight="500"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/collectionNameText"
        app:layout_constraintStart_toEndOf="@id/collectionNameText"
        app:layout_constraintTop_toTopOf="@id/collectionNameText" />

    <EditText
        android:id="@+id/collectionNameEditText"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/edit_text_round"
        android:hint="컬렉션 이름을 입력해주세요"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:textColorHint="#C5C8CE"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/collectionNameText" />

    <TextView
        android:id="@+id/collectionDescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="설명"
        android:textFontWeight="500"
        app:layout_constraintStart_toStartOf="@id/collectionNameText"
        app:layout_constraintTop_toBottomOf="@id/collectionNameEditText" />

    <EditText
        android:id="@+id/collectionDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/edit_text_round"
        android:hint="컬렉션에 대한 설명을 입력해주세요"
        android:paddingStart="16dp"
        android:textColorHint="#C5C8CE"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/collectionDescriptionText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/completeBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/custom_ripple_effect"
        android:enabled="false"
        android:gravity="center"
        android:text="생성하기"
        android:textColor="@color/disableTextColor"
        android:textFontWeight="700"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.082" />


</androidx.constraintlayout.widget.ConstraintLayout>