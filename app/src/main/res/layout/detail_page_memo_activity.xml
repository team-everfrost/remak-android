<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/backBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/baseline_arrow_back_ios_24" />


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/moreIcon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_more_horiz_24"
            android:background="@color/white"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/shareIcon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toStartOf="@id/moreIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/outline_share_24"
            android:background="@color/white"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/editIcon"
            android:layout_width="40dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toStartOf="@id/shareIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/baseline_edit_24"
            android:background="@color/white"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/completeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/complete"
            android:textSize="20dp"
            android:textFontWeight="600"
            android:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/memoColor"
        android:layout_marginBottom="50dp"
        android:layout_height="0dp">

        <EditText
            android:id="@+id/memoContent"
            android:background="@color/memoColor"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:padding="10dp"
            tools:text="오늘 할 일 : blablabla"
            android:textColor="@color/black"
            />


    </ScrollView>







</androidx.constraintlayout.widget.ConstraintLayout>