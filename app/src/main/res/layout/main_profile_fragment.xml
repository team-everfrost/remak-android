<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.main.MainHomeFragment"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/topLinear"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:text="RipAGU님"
            android:textFontWeight="500"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </RelativeLayout>




    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whiteGray"
        app:layout_constraintTop_toBottomOf="@id/topLinear"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/divider"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/storageConstraint"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/storageLinear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintHorizontal_weight="0.66"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/subsButton"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/storage"
                        android:textSize="15sp"
                        android:textColor="@color/checkBlue"
                        android:textFontWeight="800"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/20GB(5%)사용"
                        android:textSize="15sp"
                        android:textFontWeight="600"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/subsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="@string/subscribe"
                    android:textFontWeight="600"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="0.34"
                    app:layout_constraintStart_toEndOf="@id/storageLinear"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <TextView
                android:id="@+id/optionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="옵션"
                android:textFontWeight="800"
                android:textColor="@color/checkBlue"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/alertSettingButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_ripple_effect_transparent"
                android:text="알림설정"
                android:textSize="14sp"
                android:textFontWeight="700"
                android:layout_marginTop="20dp"
                android:gravity="start|center_vertical"

                android:paddingStart="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/emailChangeButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_ripple_effect_transparent"
                android:text="이메일 변경"
                android:textSize="14sp"
                android:textFontWeight="700"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/termsOfServiceButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_ripple_effect_transparent"
                android:text="이용약관"
                android:textSize="14sp"
                android:textFontWeight="700"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/privacyPolicyButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_ripple_effect_transparent"
                android:text="개인정보처리방침"
                android:textSize="14sp"
                android:textFontWeight="700"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_ripple_effect_transparent"
                android:text="로그아웃"
                android:textSize="14sp"
                android:textFontWeight="700"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/withdrawalButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_ripple_effect_transparent"
                android:text="회원탈퇴"
                android:textSize="14sp"
                android:textFontWeight="700"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"/>



        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>










</androidx.constraintlayout.widget.ConstraintLayout>