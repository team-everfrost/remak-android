<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:text="추가하기"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        android:textFontWeight="700"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addText"
        android:layout_marginTop="27dp"
        android:orientation="vertical"
        >
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linkAddBtn"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginHorizontal="16dp">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/linkImg"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:src="@drawable/sample_image"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="13.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/linkImg"
                android:textFontWeight="700"
                android:text="링크"
                android:layout_marginStart="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/linkImg"
                android:layout_marginTop="38dp"
                android:layout_marginStart="12dp"
                android:text="다시 보고싶은 페이지를 저장할 수 있어요"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/right_arrow"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fileAddBtn"
            android:layout_marginTop="27dp"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginHorizontal="16dp">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/fileImg"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:src="@drawable/sample_image"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="13.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/fileImg"
                android:textFontWeight="700"
                android:text="파일"
                android:layout_marginStart="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/fileImg"
                android:layout_marginTop="38dp"
                android:layout_marginStart="12dp"
                android:text="Pdf, Hwp, Docx, Ppt, Xlsx 등을 지원해요"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/right_arrow"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/photoAddBtn"
            android:layout_marginTop="27dp"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginHorizontal="16dp">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/photoImg"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:src="@drawable/sample_image"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="13.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/photoImg"
                android:textFontWeight="700"
                android:text="사진"
                android:layout_marginStart="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/photoImg"
                android:layout_marginTop="38dp"
                android:layout_marginStart="12dp"
                android:text="Jpg, Png, Gif 등을 지원해요"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/right_arrow"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/memoAddBtn"
            android:layout_marginTop="27dp"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginHorizontal="16dp">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/memoImg"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:src="@drawable/sample_image"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginTop="13.5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/memoImg"
                android:textFontWeight="700"
                android:text="메모"
                android:layout_marginStart="12dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/memoImg"
                android:layout_marginTop="38dp"
                android:layout_marginStart="12dp"
                android:text="간단한 메모를 입력할 수 있어요"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/right_arrow"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>










</androidx.constraintlayout.widget.ConstraintLayout>