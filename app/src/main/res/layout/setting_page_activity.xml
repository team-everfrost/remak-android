<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topConstraint"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageButton
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            android:background="@color/white"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="25dp"/>

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정 페이지"
            android:textFontWeight="600"
            android:layout_gravity="center"
            android:textSize="20sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/topConstraint"
        android:background="#ADADAD"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/alertSettingButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_ripple_effect_gray_rectangle"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:text="알림설정"
        android:textSize="14sp"
        android:textFontWeight="700"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/emailChangeButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_ripple_effect_gray_rectangle"
        app:layout_constraintTop_toBottomOf="@id/alertSettingButton"
        android:layout_marginTop="1dp"
        android:text="이메일 변경"
        android:textSize="14sp"
        android:textFontWeight="700"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/termsOfServiceButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_ripple_effect_gray_rectangle"
        app:layout_constraintTop_toBottomOf="@id/emailChangeButton"
        android:layout_marginTop="1dp"
        android:text="이용약관"
        android:textSize="14sp"
        android:textFontWeight="700"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/privacyPolicyButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_ripple_effect_gray_rectangle"
        app:layout_constraintTop_toBottomOf="@id/termsOfServiceButton"
        android:layout_marginTop="1dp"
        android:text="개인정보처리방침"
        android:textSize="14sp"
        android:textFontWeight="700"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_ripple_effect_gray_rectangle"
        app:layout_constraintTop_toBottomOf="@id/privacyPolicyButton"
        android:layout_marginTop="1dp"
        android:text="로그아웃"
        android:textSize="14sp"
        android:textFontWeight="700"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/withdrawalButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/custom_ripple_effect_gray_rectangle"
        app:layout_constraintTop_toBottomOf="@id/logoutButton"
        android:layout_marginTop="1dp"
        android:text="회원탈퇴"
        android:textSize="14sp"
        android:textFontWeight="700"
        android:gravity="start|center_vertical"
        android:paddingStart="10dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>