<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blueTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/checkBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:text="쉽다,빠르다,편리하다"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="37sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="114dp"
            android:text="Remak"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="자동 분류와 요약 추천까지 해주는\n편리한 글 읽기 제공 서비스 "
            android:textColor="@color/white"
            android:textFontWeight="400"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title2" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bigIconRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginTop="43dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/title3" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/smallIconRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/bigIconRecyclerView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appleLoginBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_round"
        android:drawableStart="@drawable/apple_logo"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:text="Apple로 계속하기"
        android:textFontWeight="500"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blueTitle"
        app:layout_constraintWidth_percent="0.91"

        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/naverLoginBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text_round"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:text="네이버로 계속하기"
        android:textFontWeight="500"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appleLoginBtn"
        app:layout_constraintWidth_percent="0.91" />

    <TextView
        android:id="@+id/emailLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/email_login"
        android:textColor="#646F7C"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/naverLoginBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>