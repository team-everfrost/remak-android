<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.account.signUp.AccountSignUp3Fragment"
    >

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/backButton"
        android:background="@drawable/custom_ripple_effect"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="회원가입"
        android:textFontWeight="500"
        android:textSize="18sp"
        android:layout_marginTop="15dp"/>



    <TextView
        android:id="@+id/email_verify_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="63dp"
        android:text="@string/verification_text"
        android:textSize="20sp"
        android:textFontWeight="500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton" />
    
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H, 1:0.16"
        app:layout_constraintTop_toBottomOf="@id/email_verify_code_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp">
        
        <EditText
            android:id="@+id/verifyCodeEditText1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="25sp"
            android:textFontWeight="700"
            android:gravity="center"
            android:cursorVisible="false"
            android:layout_height="match_parent"
            android:background="@drawable/edit_text_verify_code"/>

        <EditText
            android:id="@+id/verifyCodeEditText2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:maxLength="1"
            android:layout_height="match_parent"
            android:inputType="number"
            android:cursorVisible="false"
            android:textSize="25sp"
            android:textFontWeight="700"
            android:gravity="center"
            android:background="@drawable/edit_text_verify_code"/>

        <EditText
            android:id="@+id/verifyCodeEditText3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLength="1"
            android:cursorVisible="false"
            android:layout_marginStart="8dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:textSize="25sp"
            android:textFontWeight="700"
            android:gravity="center"
            android:background="@drawable/edit_text_verify_code"/>

        <EditText
            android:id="@+id/verifyCodeEditText4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:maxLength="1"
            android:layout_height="match_parent"
            android:cursorVisible="false"
            android:inputType="number"
            android:textSize="25sp"
            android:textFontWeight="700"
            android:gravity="center"
            android:background="@drawable/edit_text_verify_code"/>

        <EditText
            android:id="@+id/verifyCodeEditText5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:maxLength="1"
            android:layout_height="match_parent"
            android:cursorVisible="false"
            android:inputType="number"
            android:textSize="25sp"
            android:textFontWeight="700"
            android:gravity="center"
            android:background="@drawable/edit_text_verify_code"/>

        <EditText
            android:id="@+id/verifyCodeEditText6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:maxLength="1"
            android:layout_height="match_parent"
            android:inputType="number"
            android:cursorVisible="false"
            android:textSize="25sp"
            android:textFontWeight="700"
            android:gravity="center"
            android:background="@drawable/edit_text_verify_code"/>






    </androidx.appcompat.widget.LinearLayoutCompat>




    


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="348dp"
        android:background="@drawable/custom_ripple_effect"
        android:gravity="center"
        android:text="@string/next"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>