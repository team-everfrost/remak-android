<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blueTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.64"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/checkBlue">
        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="쉽다,빠르다,편리하다"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="24sp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:text="Remak"
            android:textFontWeight="700"
            android:textSize="30sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="90dp"/>
        
        <TextView
            android:id="@+id/title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title2"
            app:layout_constraintStart_toStartOf="parent"
            android:text="자동 분류와 요약 추천까지 해주는\n편리한 글 읽기 제공 서비스 "
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:textFontWeight="400"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bigIconRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:layout_marginTop="43dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/title3" 
            />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/smallIconRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@id/bigIconRecyclerView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appleLoginBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.91"
        app:layout_constraintHeight_percent="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blueTitle"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_round"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:drawableLeft="@drawable/apple_logo"
        android:text="Apple로 계속하기"
        android:textSize="18sp"
        android:textFontWeight="500"

        />
    



    <com.google.android.material.button.MaterialButton
        android:id="@+id/naverLoginBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.91"
        app:layout_constraintHeight_percent="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appleLoginBtn"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text_round"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        app:icon="@drawable/apple_logo"
        app:iconGravity="textStart"
        app:iconTint="#000000"
        app:iconTintMode="multiply"
        android:text="네이버로 계속하기"
        android:textSize="18sp"
        android:textFontWeight="500"/>
    
    <TextView
        android:id="@+id/emailLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/naverLoginBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/email_login"
        android:textColor="#646F7C"
        android:textSize="12sp"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>